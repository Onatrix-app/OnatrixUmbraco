@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = "mainLayout.cshtml";
}

<body>

    <div class="wrapper">
        <header>
            <div class="GreenBox">
                <div class="GreenBoxInput">
                    <div class="AddressText">
                        <p>Klarabergsviadukten 90, 111 64 Stockholm</p>
                    </div>

                    <div class="SocialMediaButtons">
                        <a href="#"><div><i class="fa-brands fa-facebook"></i></div></a>
                        <a href="#"><div><i class="fa-brands fa-twitter"></i></div></a>
                        <a href="#"><div><i class="fa-brands fa-linkedin-in"></i></div></a>
                    </div>    
                </div>
                
            </div>

            <div class="WhiteBox">
                <div class="LogoAndButtons">
                    <div class="ImageLogo">
                        <a href="/Home">
                           @if (Model.Value<IPublishedContent>("headerLogo") != null)
                            {
                                var headerLogo = Model.Value<IPublishedContent>("headerLogo").Url();
                                <img src="@headerLogo" alt="headerLogo Image">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }
                        </a>
                    </div>  
                    <div class="HeaderButtons">
                        <a href="#">About</a>
                        <a href="#">Services</a>
                        <a href="#">Projects</a>
                        <a href="#">Contact</a>
                    </div>
                    
                </div>

                <div class="SearchBar">
                    <input type="text" placeholder="Search..">
                    <a href="#"><i class="fa-solid fa-magnifying-glass"></i></a>
                </div>
                

            </div>
        </header>


        <main>
            <section class="RiskManagement">
                <div class="RiskManagementChild">
                    <div class="RiskManagementText">
                        <h2>@Model.Value("riskManagementTitle")</h2>
                        <p>@Model.Value("riskManagementText")</p>
                    </div>
                    
                </div>
            </section>

            <section class="RiskManagementMain">
                <div class="RiskManagementParent">
                    <div class="AboutUsCorner">
                        <div class="AboutUsCornerChild">
                            <h6>@Model.Value("riskManagementMainTitle")</h6>

                            @if (Model.Value<IPublishedContent>("riskManagementMainPicture") != null)
                            {
                                var riskManagementMainPicture = Model.Value<IPublishedContent>("riskManagementMainPicture").Url();
                                <img src="@riskManagementMainPicture" alt="riskManagementMainPicture Image">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }

                            <p>
                                @Model.Value("riskManagementMainText")
                            </p>

                            <div class="AboutUsCornerBottom">
                                <h4>@Model.Value("aboutUsCornerTitle")</h4>
                                <p>
                                    @Model.Value("aboutUsCornerText")
                                </p>

                                <div class="AboutUsCornerEmail">
                                    <input type="email" placeholder="E-mail address">
                                    <i class="fa-regular fa-envelope"></i>  
                                </div>
                                


                            </div>
                        </div>  
                    </div>

                    <div class="VerticalLine">

                    </div>

                    <div class="RiskManagementText">

                            @if (Model.Value<IPublishedContent>("riskmanagementMainPictureRight") != null)
                            {
                                var riskmanagementMainPictureRight = Model.Value<IPublishedContent>("riskmanagementMainPictureRight").Url();
                                <img src="@riskmanagementMainPictureRight" alt="riskmanagementMainPictureRight Image">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            }          

                        <h3>@Model.Value("riskmanagementMainRightTitle")</h3>

                        <ul>
                            <li>
                                <p>
                                  @Model.Value("riskmanagementMainRightText")
                                </p>
                            </li>
                        </ul>

                        <h3>@Model.Value("riskmanagementMainMiddleTitle")</h3>
                        <p>
                           @Model.Value("riskmanagementMainMiddleText")
                        </p>

                          @if (Model.Value<IPublishedContent>("riskmanagementMainMiddlePicture") != null)
                            {
                                var riskmanagementMainMiddlePicture = Model.Value<IPublishedContent>("riskmanagementMainMiddlePicture").Url();
                                <img src="@riskmanagementMainMiddlePicture" alt="riskmanagementMainMiddlePicture Image">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            } 

                        <h3>@Model.Value("riskmanagementMainDownTitle")</h3>

                        <p>
                          @Model.Value("riskmanagementMainDownText")
                        </p>
                         

                    </div>
                </div>
                
                <div class="RiskManagementForm">
                    <div class="RiskManagementFormChild">
                        <h6>@Model.Value("riskmanagementMainFormTitle")</h6>

                        <form action="#">
                            <div class="RiskManagementInForm">
                                <input type="text" placeholder="Name">
                                <input type="email" placeholder="Email">
                            </div>

                            <input type="text" placeholder="Question">
                        </form>
                        <button type="submit">Submit</button>
                    </div> 
                </div>

            </section>

            <section class="ContactInformation">
                <div class="ContactPicture">
                       @if (Model.Value<IPublishedContent>("riskmanagementMainMiddlePicture") != null)
                            {
                                var contactInformationPicture = Model.Value<IPublishedContent>("contactInformationPicture").Url();
                                <img src="@contactInformationPicture" alt="contactInformationPicture Image">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            } 
                        
                </div>

                <div class="ContactText">
                    <div>
                        <h2>
                           @Model.Value("contactInformationTitle")
                        </h2>

                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-solid fa-location-dot"></i>
                                <h6>@Model.Value("contactInformationLocation")</h6>
                            </div>
                            

                            <p>@Model.Value("contactInformationAddress")</p>
                        </div>
                        

                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-solid fa-phone"></i>
                                <h6>@Model.Value("contactInformationPhone")</h6>  
                            </div> 
                            <p>@Model.Value("contactInformationPhoneNumber")</p>
                        </div>

                        <div class="Contact">
                            <div class="ContactChild">
                                <i class="fa-regular fa-envelope"></i>
                                <h6>@Model.Value("contactInformationEmail")</h6>
                            </div>
                            <p>@Model.Value("contactInformationEmailAddress")</p>
                        </div>
                    
                    </div>
                </div>

            </section>
        </main>

        <footer>
            <div class="WhiteBox">
                   @if (Model.Value<IPublishedContent>("footerPicture") != null)
                            {
                                var footerPicture = Model.Value<IPublishedContent>("footerPicture").Url();
                                <img src="@footerPicture" alt="footerPicture Image">   
                            }
                            else
                            {
                                <p>Ingen bild tillgänglig</p>
                            } 
            </div>

            <div class="BlackBox">
                <p>© Onatrix. All Rights Reserved. Credits to <span>Themesflat</span></p>
            </div>
        </footer>
    </div>
    
</body>